@page "/teachers"

<PageTitle>LexiconLMS - Teachers</PageTitle>

<div class="d-flex flex-column align-items-start min-vh-100">
    <div class ="flex-row">
        <h3 class="mb-5 mt-5">Teacher Overview</h3>
    </div>
    @if (Loading)
    {
        <Spinner />
    }
    else
    {
        @if (Model != null && Model.Count() > 0)
        {
            <div class="flex-column">
                <div class="row">
                    @foreach (var teacher in Model)
                    {
                        <TeacherCard Teacher="teacher" />
                    }
                </div>
            </div>
        }
        <a href="/courses" class="btn btn-warning">Courses</a>
    }
</div>