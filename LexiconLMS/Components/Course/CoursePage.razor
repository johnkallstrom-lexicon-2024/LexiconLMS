@page "/courses";

<div class="container">
    <a href="/create-course" class="btn btn-success mb-3">Add Course</a>
    <div class="row">
        @foreach (var course in Courses)
        {
            <div class="col-md-4">
                <div class="card mb-4" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">@course.Name</h5>
                        <p class="card-text">@course.Description</p>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item"><strong>Id:</strong> @course.Id</li>
                            <li class="list-group-item"><strong>Start:</strong> @course.StartDate.ToShortDateString()</li>
                            <li class="list-group-item"><strong>End:</strong> @course.EndDate.ToShortDateString()</li>
                        </ul>
                        <a href="/courses/edit/@course.Id" class="btn btn-primary mt-2">Edit</a>
                        <a href="/courses/edit/@course.Id" class="btn btn-danger mt-2">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
